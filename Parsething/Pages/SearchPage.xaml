<Page x:Class="Parsething.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Parsething.Functions"
      xmlns:db="clr-namespace:DatabaseLibrary.Entities.ProcurementProperties;assembly=DatabaseLibrary"
      xmlns:cls="clr-namespace:Parsething.Classes"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      Title="SearchPage"
      Loaded="Page_Loaded">
    <Page.Resources>
        <local:ProfitConverter x:Key="ProfitConverter"/>
        <local:IndicatorProfitConverter x:Key="IndicatorProfitConverter"/>
        <local:PercentageProfitConverter x:Key="PercentageProfitConverter"/>
        <local:DateToStringConverter x:Key="DateToStringConverter"/>
        <local:DateToColorConverter x:Key="DateToColorConverter"/>
        <local:AmountConverter x:Key="AmountConverter"/>
        <local:ComponentStateConverter x:Key="ComponentStateConverter"/>
        <local:DateInfoMultiConverter x:Key="DateInfoMultiConverter" />
        <local:SearchDateChanger x:Key="SearchDateChanger"/>
        <local:DateInfoAdditionalInfoConverter x:Key="DateInfoAdditionalInfoConverter" />
        <local:ApplicationsVisibilityConverter x:Key="ApplicationsVisibilityConverter"/>
        <local:ApplicationsOrNumberConverter x:Key="ApplicationsOrNumberConverter"/>
        <local:ParentProcurementIdConverter x:Key="ParentProcurementIdConverter"/>
        <local:ProcurementIsProblemConverter x:Key="ProcurementIsProblemConverter"/>
        <local:PercentageReserveAmountConverter x:Key="PercentageReserveAmountConverter"/>
        <local:IsProcurementInWaitingListConverter x:Key="IsProcurementInWaitingListConverter"/>
        <db:Procurement x:Key="Procurement"/>
        <system:String x:Key="CalculatingString">Calculating</system:String>
        <system:String x:Key="PurchaseString">Purchase</system:String>
    </Page.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Width="1815" Height="900">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1500"/>
                <ColumnDefinition Width="315"/>
            </Grid.ColumnDefinitions>
            <Border Background="{DynamicResource MainFrame.Background}" Grid.Column="0" Margin="0,15,0,15"  CornerRadius="45" BorderThickness="2" BorderBrush="#C6BDBF">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="37"/>
                        <RowDefinition />
                        <RowDefinition Height="43"/>
                    </Grid.RowDefinitions>
                    <Grid x:Name="SortingHeadersGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="42"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="105"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="55"/>
                        </Grid.ColumnDefinitions>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="Id" Grid.Column="0" />
                        <Label Style="{DynamicResource ClickableColumnNames.Search}" Content="Закон" Grid.Column="1" MouseLeftButtonUp="SortByField" Tag="Law"/>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="В работе" Grid.Column="2" />
                        <Label Style="{DynamicResource ClickableColumnNames.Search}" Content="Комплектующие" Grid.Column="3" MouseLeftButtonUp="SortByField" Tag="PercentageReserve"/>
                        <Label Style="{DynamicResource ClickableColumnNames.Search}" Content="Дата окончания подачи" Grid.Column="4" MouseLeftButtonUp="SortByField" Tag="ResultDate" Margin="0,0,0,15"/>
                        <Label Style="{DynamicResource ClickableColumnNames.Search}" Content="Дата подведения итогов" Grid.Column="4" MouseLeftButtonUp="SortByField" Tag="Deadline" Margin="0,10,0,0"/>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="Расчет" Grid.Column="5" Margin="0,0,0,15"/>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="НМЦК" Grid.Column="5" Margin="0,10,0,0"/>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="Закупка" Grid.Column="6" Margin="0,0,0,15"/>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="Контракт" Grid.Column="6" Margin="0,10,0,0"/>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="Статус тендера" Grid.Column="7" />
                        <Label Style="{DynamicResource ClickableColumnNames.Search}" Content="Подписание" Grid.Column="8" MouseLeftButtonUp="SortByField" Tag="Signing"/>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="Проверка" Grid.Column="9" />
                        <Label Style="{DynamicResource ClickableColumnNames.Search}" x:Name="FieldName" Grid.Column="10" Content="Поставка" MouseLeftButtonUp="SortByField" Margin="0,0,0,15" Cursor="Hand"/>
                        <StackPanel x:Name="ChangeDateStackPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="10" Margin="0,15,0,0">
                            <Ellipse Width="10" Height="10" Fill="Gray" Margin="5,0" 
                                Tag="ActualDeliveryDate" MouseLeftButtonUp="SwitchField" />
                            <Ellipse Width="10" Height="10" Fill="LightGray" Margin="5,0" 
                                Tag="MaxAcceptanceDate" MouseLeftButtonUp="SwitchField" />
                            <Ellipse Width="10" Height="10" Fill="LightGray" Margin="5,0" 
                                Tag="MaxDueDate" MouseLeftButtonUp="SwitchField" />
                        </StackPanel>
                        <Label Style="{DynamicResource ClickableColumnNames.Search}" Content="Приемка" Grid.Column="11" MouseLeftButtonUp="SortByField" Tag="MaxAcceptanceDate"/>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="Реальный профит" Grid.Column="12" Margin="0,10,0,0"/>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="Расчетный профит" Grid.Column="12" Margin="0,0,0,15"/>
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="Регион" Grid.Column="13" />
                        <Label Style="{DynamicResource ColumnNames.Search}" Content="Опции" Grid.Column="14" />
                    </Grid>
                    <ListView x:Name="SearchLV" Grid.Column="2" BorderThickness="0" Style="{DynamicResource ListView}" Grid.Row="1" ItemContainerStyle="{DynamicResource CustomListViewItemStyle}">
                        <i:Interaction.Behaviors>
                            <cls:SmoothScrollBehavior />
                        </i:Interaction.Behaviors>
                        <ListView.ItemTemplate >
                            <DataTemplate>
                                <Border 
                                BorderThickness="1"
                                BorderBrush="#C6BDBF"
                                CornerRadius="15"
                                    ContextMenuOpening="ContextMenu_ContextMenuOpening">
                                    <Grid HorizontalAlignment="Stretch" Height="50">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="45"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="125"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="115"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Style="{StaticResource RepeatedStatusIndicatorStyle}"/>
                                        <TextBlock 
                                        x:Name="DisplayId"
                                        Style="{DynamicResource TableElements}"
                                        Cursor="Hand"
                                        MouseDown="DisplayId_MouseDown"
                                        Text="{Binding DisplayId}"
                                        HorizontalAlignment="Center"
                                        FontSize="13"
                                        VerticalAlignment="Center"/>
                                        <Border 
                                            BorderBrush="Black" 
                                            BorderThickness="0.3" 
                                            CornerRadius="4" 
                                            Height="15" 
                                            Width="60" 
                                            Margin="0,0,0,30">
                                            <Border.Visibility>
                                                <MultiBinding Converter="{StaticResource ApplicationsVisibilityConverter}">
                                                    <Binding Path="Applications" Mode="OneWay"/>
                                                    <Binding Path="ParentProcurementId" Mode="OneWay"/>
                                                </MultiBinding>
                                            </Border.Visibility>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="15"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock 
                                                    Style="{DynamicResource TableElements}"
                                                    Grid.Column="0"
                                                    Text="{Binding ParentProcurementId, Converter={StaticResource ParentProcurementIdConverter}}"
                                                    FontSize="13"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                                                <Button x:Name="GoToApplicationsButton" FontSize="8" Grid.Column="1" Click="GoToApplicationsButton_Click">
                                                    <Button.Content>
                                                        <MultiBinding Converter="{StaticResource ApplicationsOrNumberConverter}">
                                                            <Binding Path="Applications"/>
                                                            <Binding Path="DisplayId"/>
                                                            <Binding Path="ApplicationNumber"/>
                                                        </MultiBinding>
                                                    </Button.Content>
                                                </Button>
                                            </Grid>
                                        </Border>
                                        <Rectangle Grid.Column="1" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <TextBlock 
                                        Style="{DynamicResource TableElements}"
                                        Grid.Column="2"
                                        Text="{Binding Path=Law.Number}"
                                        FontSize="13"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                        <Rectangle Grid.Column="3" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <Button 
                                            x:Name="EmployeeInfoButton"
                                            Grid.Column="4"
                                            MouseEnter="EmployeeInfoButton_MouseEnter"
                                            MouseLeave="EmployeeInfoButton_MouseLeave"
                                            Style="{DynamicResource ButtonWithIcon}">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="/Resources/Images/EmployeePreview.png" Stretch="Uniform" Height="30"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <Popup x:Name="EmployeeInfoPopUp" PlacementTarget="{Binding ElementName=EmployeeInfoButton}" Placement="Bottom" StaysOpen="True" Width="170">
                                            <Border Background="White" BorderBrush="Black" BorderThickness="0.2">
                                                <Grid Width="170" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="75"/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Content="Расчетчик: " Grid.Row="0" Style="{DynamicResource LabelBase}"/>
                                                    <TextBlock x:Name="CalculatorTextBlock" Grid.Row="0" Grid.Column="1" Style="{DynamicResource OverAllInfo.Search.TextBlock}"/>
                                                    <Label Content="Менеджер: " Grid.Row="2" Style="{DynamicResource LabelBase}"/>
                                                    <TextBlock x:Name="ManagerTextBlock" Grid.Row="2" Grid.Column="1" Style="{DynamicResource OverAllInfo.Search.TextBlock}"/>
                                                </Grid>
                                            </Border>
                                        </Popup>
                                        <Rectangle Grid.Column="5" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <StackPanel Grid.Column="6">
                                            <TextBlock 
                                                Style="{DynamicResource TableElements}"
                                                FontSize="10"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,0">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource PercentageReserveAmountConverter}">
                                                        <Binding Path="PurchaseAmount"/>
                                                        <Binding Path="Id"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <lvc:CartesianChart 
                                                Width="110" 
                                                MinHeight="14" 
                                                Height="25"
                                                Series="{Binding ComponentStates, 
                                                  Converter={StaticResource ComponentStateConverter}}">
                                                <lvc:CartesianChart.AxisX>
                                                    <lvc:Axis ShowLabels="False" />
                                                </lvc:CartesianChart.AxisX>
                                                <lvc:CartesianChart.AxisY>
                                                    <lvc:Axis ShowLabels="False" />
                                                </lvc:CartesianChart.AxisY>
                                                <lvc:CartesianChart.DataTooltip>
                                                    <lvc:DefaultTooltip />
                                                </lvc:CartesianChart.DataTooltip>
                                                <lvc:CartesianChart.VisualElements>
                                                    <lvc:VisualElement Opacity="0" />
                                                </lvc:CartesianChart.VisualElements>
                                            </lvc:CartesianChart>
                                            <TextBlock 
                                                Style="{DynamicResource TableElements}"
                                                Text="{Binding ShipmentPlan.Kind, UpdateSourceTrigger=PropertyChanged}"
                                                HorizontalAlignment="Center"
                                                FontSize="10"
                                                 VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Rectangle Grid.Column="7" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="8"
                                            Text="{Binding Deadline, StringFormat='{}{0:dd.MM.yyyy HH:mm:ss}', UpdateSourceTrigger=PropertyChanged}"
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            VerticalAlignment="Center"
                                            Margin="0,0,0,18"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="8"
                                            Text="{Binding ResultDate, StringFormat='{}{0:dd.MM.yyyy HH:mm:ss}', UpdateSourceTrigger=PropertyChanged}"
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            VerticalAlignment="Center"
                                            Margin="0,18,0,0"/>
                                        <Rectangle Grid.Column="9" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="10"
                                            Text="{Binding Path=CalculatingAmount, StringFormat={}{0:N2} р.}"
                                            FontSize="13"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,18"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="10"
                                            Text="{Binding Path=InitialPrice, StringFormat={}{0:N2} р.}"
                                            FontSize="13"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="0,18,0,0"/>
                                        <Rectangle Grid.Column="11" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="12"
                                            Text="{Binding Path=PurchaseAmount, StringFormat={}{0:N2} р.}"
                                            FontSize="13"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,18"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="12"
                                            FontSize="13"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="0,18,0,0">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource AmountConverter}">
                                                    <Binding Path="ContractAmount"/>
                                                    <Binding Path="ReserveContractAmount"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <Rectangle Grid.Column="13" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <Ellipse Style="{StaticResource StatusIndicatorStyle}" Grid.Column="14" Margin="2,0,0,0"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="14"
                                            Text="{Binding Path=ProcurementState.Kind}"
                                            FontSize="12"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="5,0,0,0"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="14"
                                            Text="{Binding WaitingList, Converter={StaticResource IsProcurementInWaitingListConverter }}"
                                            Foreground="#BD1414"
                                            FontSize="12"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="5,0,0,27"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="14"
                                            Text="{Binding CorrectionDate, Converter={StaticResource ProcurementIsProblemConverter}}"
                                            Foreground="#BD1414"
                                            FontSize="10"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="5,30,0,0"/>
                                        <Rectangle Grid.Column="15" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <TextBlock 
                                        Style="{DynamicResource TableElements}"
                                        Grid.Column="16"
                                        FontSize="12"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="0,0,0,18">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource DateInfoMultiConverter}">
                                                    <Binding Path="SigningDeadline" />
                                                    <Binding Path="SigningDate" />
                                                    <Binding Path="ConclusionDate" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="16"
                                            FontSize="12"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="0,18,0,0">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource DateInfoAdditionalInfoConverter}">
                                                    <Binding Path="SigningDeadline" />
                                                    <Binding Path="SigningDate" />
                                                    <Binding Path="ConclusionDate" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <Rectangle Grid.Column="17" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <DockPanel
                                            Grid.Column="18">
                                            <TextBlock 
                                                Style="{DynamicResource TableElements}"
                                                Text="Р:"
                                                FontSize="13"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                            <Label x:Name="CalculatingApprove" 
                                                Content="&#xe73a;" 
                                                FontSize="15"
                                                FontFamily="Segoe Fluent Icons"
                                                Foreground="{StaticResource MainText.Foreground}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                                <Label.Style>
                                                    <Style TargetType="Label">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Calculating}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Label.Style>
                                            </Label>
                                            <TextBlock 
                                                Style="{DynamicResource TableElements}"
                                                Text="З:"
                                                FontSize="13"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                            <Label x:Name="arrow" 
                                                Content="&#xe73a;" 
                                                FontSize="15"
                                                FontFamily="Segoe Fluent Icons"
                                                Foreground="{StaticResource MainText.Foreground}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                                <Label.Style>
                                                    <Style TargetType="Label">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Purchase}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Label.Style>
                                            </Label>
                                        </DockPanel>
                                        <Rectangle Grid.Column="19" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <Ellipse Grid.Column="20" Margin="2,0,0,0" Style="{DynamicResource EllipseBase}">
                                            <Ellipse.Fill>
                                                <MultiBinding Converter="{StaticResource DateToColorConverter}">
                                                    <Binding Path="ActualDeliveryDate" />
                                                    <Binding Path="MaxAcceptanceDate" />
                                                    <Binding Path="MaxDueDate" />
                                                </MultiBinding>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Style="{DynamicResource TableElements}" Grid.Column="20"
                                            FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource SearchDateChanger}" StringFormat="{}{0:dd.MM.yyyy}">
                                                    <Binding Path="ActualDeliveryDate" />
                                                    <Binding Path="MaxAcceptanceDate" />
                                                    <Binding Path="MaxDueDate" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <Rectangle Grid.Column="21" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <Ellipse Style="{StaticResource MaxAcceptanceDateIndicatorStyle}" Grid.Column="22" Margin="2,0,0,18"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="22"
                                            Text="{Binding Path=MaxAcceptanceDate, StringFormat='{}{0:dd.MM.yyyy}'}"
                                            FontSize="12"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="0,0,0,18"/>
                                        <TextBlock 
                                            Style="{DynamicResource TableElements}"
                                            Grid.Column="22"
                                            Text="{Binding MaxAcceptanceDate, Converter={StaticResource DateToStringConverter }}"
                                            FontSize="12"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="0,18,0,0"/>
                                        <Rectangle Grid.Column="23" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <Grid Grid.Column="24" Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="35"/>
                                                <ColumnDefinition Width="25"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <TextBlock 
                                                x:Name="CalculatingProfit"
                                                Style="{DynamicResource TableElements}"
                                                FontSize="13"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,0">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource ProfitConverter}">
                                                        <Binding Path="ContractAmount"/>
                                                        <Binding Path="ReserveContractAmount"/>
                                                        <Binding Path="CalculatingAmount"/>
                                                        <Binding Source="{StaticResource CalculatingString}"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock 
                                                x:Name="PurchaseProfit"
                                                Style="{DynamicResource TableElements}"
                                                Grid.Row="1"
                                                FontSize="13"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource ProfitConverter}">
                                                        <Binding Path="ContractAmount"/>
                                                        <Binding Path="ReserveContractAmount"/>
                                                        <Binding Path="PurchaseAmount"/>
                                                        <Binding Source="{StaticResource PurchaseString}"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock 
                                                Style="{DynamicResource TableElements}"
                                                Grid.Column="1"
                                                FontSize="13"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource PercentageProfitConverter}">
                                                        <Binding Path="ContractAmount"/>
                                                        <Binding Path="ReserveContractAmount"/>
                                                        <Binding Path="CalculatingAmount"/>
                                                        <Binding Source="{StaticResource CalculatingString}"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock 
                                                Style="{DynamicResource TableElements}"
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                FontSize="13"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource PercentageProfitConverter}">
                                                        <Binding Path="ContractAmount"/>
                                                        <Binding Path="ReserveContractAmount"/>
                                                        <Binding Path="PurchaseAmount"/>
                                                        <Binding Source="{StaticResource PurchaseString}"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <Ellipse Style="{StaticResource ProfitIndicator}" Grid.Column="2" Grid.RowSpan="2"/>
                                        </Grid>
                                        <Rectangle Grid.Column="25" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <TextBlock 
                                        Style="{DynamicResource TableElements}"
                                        Text="{Binding Path=Region.Title}"
                                        Grid.Column="26"
                                        HorizontalAlignment="Center"
                                        Name="Region"
                                        FontSize="10"
                                        VerticalAlignment="Center"
                                        TextWrapping="Wrap"
                                        TextTrimming="CharacterEllipsis"
                                        MaxWidth="200"/>
                                        <Rectangle Grid.Column="27" Fill="{DynamicResource TitleBar.Background}" Margin="0,10" Grid.RowSpan="2"/>
                                        <Button 
                                        x:Name="EditProcurement"
                                        Grid.Column="28"
                                        Click="EditProcurement_Click"
                                        Style="{DynamicResource ButtonWithIcon}">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="/Resources/Images/gear.png" Stretch="Uniform" Height="30"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                    <Border.ContextMenu>
                                        <ContextMenu Style="{StaticResource RoundedContextMenuStyle}">
                                            <MenuItem Header="Расчет" Click="Calculating_Click">
                                                <MenuItem.Icon>
                                                    <Image Source="/Resources/Images/Calculator.png" Stretch="Uniform" Height="20"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="Закупка" Click="Purchase_Click">
                                                <MenuItem.Icon>
                                                    <Image Source="/Resources/Images/Purchase.png" Stretch="Uniform" Height="20"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="Перейти на ЕИС" Click="NavigateToProcurementURL_Click">
                                                <MenuItem.Icon>
                                                    <Image Source="/Resources/Images/CoatOfArms.png" Stretch="Uniform" Height="20"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="Перейти на ETP" Click="NavigateToEPlatformURL_Click">
                                                <MenuItem.Icon>
                                                    <Image Source="/Resources/Images/EPlatform.png" Stretch="Uniform" Height="20"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="Редактирование тендера" Click="EditProcurement_Click">
                                                <MenuItem.Icon>
                                                    <Image Source="/Resources/Images/gear.png" Stretch="Uniform" Height="20"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="Печать карты сборки" Click="PrintAssemblyMap_Click">
                                                <MenuItem.Icon>
                                                    <Image Source="/Resources/Images/Printing.png" Stretch="Uniform" Height="20"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="Копировать выделенные номера" Click="CopyIds_Click">
                                                <MenuItem.Icon>
                                                    <Image Source="/Resources/Images/CopyToClipboard.png" Stretch="Uniform" Height="20"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem x:Name="ToggleStarMenuItem" Header="Добавить в избранное" Click="ToggleStar_Click">
                                                <MenuItem.Icon>
                                                    <Image x:Name="ToggleStarImage" Source="/Resources/Images/PaintedRedStar.png" Stretch="Uniform" Height="20"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="FirstPageButton" Content="«" Width="33" Height="33" Click="FirstPage_Click" ToolTip="Первая страница" Style="{DynamicResource Button.SearchNavigation}"/>
                        <WrapPanel x:Name="PagesPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button x:Name="LastPageButton" Content="»" Width="33" Height="33" Click="LastPage_Click" ToolTip="Последняя страница" Style="{DynamicResource Button.SearchNavigation}"/>
                        <TextBlock x:Name="PageNumberTextBlock" VerticalAlignment="Center" Margin="10,0" Style="{DynamicResource TableElements}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Border Background="{DynamicResource MainFrame.Background}" Grid.Column="1" Margin="30,15,0,15" CornerRadius="45" BorderThickness="2" BorderBrush="#C6BDBF">
                <Grid Margin="10,30,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>
                    <ListView x:Name="SearchBar" Visibility="Visible" Style="{DynamicResource ListView}">
                        <Label Content="Id тендера" Style="{DynamicResource Label.Search}"/>
                        <TextBox x:Name="SearchId" Style="{DynamicResource SingleLineInput.Search}"/>
                        <Label Content="Номер закупки" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <TextBox x:Name="SearchNumber" Style="{DynamicResource SingleLineInput.Search}" Height="40" PreviewTextInput="Search_PreviewTextInput" />
                        <Label Content="Закон" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <ComboBox x:Name="Law" HorizontalAlignment="Left" Style="{DynamicResource ComboBoxBase.Search}" Height="35" DisplayMemberPath="Number" FontSize="15"/>
                        <Label Content="Статус тендера" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <ComboBox x:Name="ProcurementState" HorizontalAlignment="Left" Style="{DynamicResource ComboBoxBase.Search}" Height="35" DisplayMemberPath="Kind" FontSize="15"/>
                        <Label x:Name="ProcurementStateSecondLabel" Content="Текущий статус тендера" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <ComboBox x:Name="ProcurementStateSecond" HorizontalAlignment="Left" Style="{DynamicResource ComboBoxBase.Search}" Height="35" DisplayMemberPath="Kind" FontSize="15" Visibility="Collapsed"/>
                        <Label Content="ИНН заказчика" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <TextBox x:Name="SearchINN" Style="{DynamicResource SingleLineInput.Search}" Height="40" PreviewTextInput="Search_PreviewTextInput"/>
                        <Label Content="Сотрудник" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <ComboBox x:Name="Employee" HorizontalAlignment="Left" Style="{DynamicResource ComboBoxBase.Search}" Height="35" DisplayMemberPath="FullName" FontSize="15"/>
                        <Label Content="Организация" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <TextBox x:Name="OrganizationName" Style="{DynamicResource SingleLineInput.Search}" Height="40"/>
                        <Label Content="Юридическое лицо" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <ComboBox x:Name="LegalEntity" HorizontalAlignment="Left" Style="{DynamicResource ComboBoxBase.Search}" Height="35" DisplayMemberPath="Name" FontSize="15"/>
                        <Label Content="Тип даты" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <ComboBox x:Name="DateType"
                            HorizontalAlignment="Left"
                            Style="{DynamicResource ComboBoxBase.Search}"
                            Height="35"
                            FontSize="15"
                            SelectedValuePath="Tag"
                            SelectionChanged="DateType_SelectionChanged"
                            DisplayMemberPath="Content">
                            <ComboBoxItem Content="Дата проставления статуса" Tag="HistoryDate"/>
                            <ComboBoxItem Content="Дата оплаты" Tag="PayDate"/>
                            <ComboBoxItem Content="Дата начала подачи" Tag="StartDate"/>
                            <ComboBoxItem Content="Дата окончания подачи" Tag="Deadline"/>
                            <ComboBoxItem Content="Дата подведения итогов" Tag="ResultDate"/>
                            <ComboBoxItem Content="Срок подписания контракта" Tag="SigningDeadline"/>
                            <ComboBoxItem Content="Максиальная дата поставки" Tag="ActualDeliveryDate"/>
                            <ComboBoxItem Content="Максимальная дата приемки" Tag="MaxAcceptanceDate"/>
                        </ComboBox>
                        <DockPanel>
                            <Label Content="От" Style="{DynamicResource Label.Search}"/>
                            <DatePicker x:Name="StartDate" Style="{DynamicResource ComponentCalculations.DatePickerStyle}" Width="100"/>
                            <Label Content="До" Style="{DynamicResource Label.Search}"/>
                            <DatePicker x:Name="EndDate" Style="{DynamicResource ComponentCalculations.DatePickerStyle}" Width="100"/>
                        </DockPanel>
                        <Label Content="Поиск по товару" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <TextBox x:Name="SearchComponentCalculation" Style="{DynamicResource SingleLineInput.Search}" Height="40"/>
                        <Label Content="План отгрузки" Style="{DynamicResource Label.Search}" Grid.Column="0" HorizontalAlignment="Left"/>
                        <ComboBox x:Name="ShipmentPlan" HorizontalAlignment="Left" Style="{DynamicResource ComboBoxBase.Search}" Height="35" DisplayMemberPath="Kind" FontSize="15"/>
                        <Label Content="Отложен до 2025 года" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <CheckBox x:Name="SearchWaitingList" HorizontalAlignment="Left" Style="{DynamicResource Checkbox.Base}" Cursor="Hand"/>
                        <Label Content="Поиск по номеру договора" Style="{DynamicResource Label.Search}" HorizontalAlignment="Left"/>
                        <TextBox x:Name="SearchContractNumber" Style="{DynamicResource SingleLineInput.Search}" Height="40"/>
                    </ListView>
                    <DockPanel Grid.Row="1">
                        <Button x:Name="SearchButton" 
                            Width="110"
                            IsDefault = "true"
                            Content="Поиск"
                            Style="{DynamicResource StatisticsButton}" 
                            Cursor="Hand"
                            Click="SearchButton_Click" />
                        <Button x:Name="OverallInfoButton" 
                            Content="&#xea1f;" 
                            FontFamily="Segoe Fluent Icons"
                            Style="{DynamicResource StatisticsButton}" 
                            Width="65"
                            Cursor="Hand"
                            Click="OverallInfo_Click"/>
                        <Popup x:Name="OverallInfoPopUp" PlacementTarget="{Binding ElementName=OverallInfoButton}" Placement="Top" StaysOpen="False" Width="300">
                            <Border Background="White" BorderBrush="Black" BorderThickness="0.2">
                                <Grid Width="300" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Content="Всего тендеров: " Style="{DynamicResource OwerAllInfo.Search}"/>
                                    <Label Content="Сумма НМЦК: " Grid.Row="1" Style="{DynamicResource OwerAllInfo.Search}"/>
                                    <Label Content="Сумма контрактов: " Grid.Row="2" Style="{DynamicResource OwerAllInfo.Search}"/>
                                    <Label Content="Расчетный профит: " Grid.Row="3" Style="{DynamicResource OwerAllInfo.Search}"/>
                                    <Label Content="Реальный профит: " Grid.Row="4" Style="{DynamicResource OwerAllInfo.Search}"/>
                                    <TextBlock x:Name="OverallCount" Grid.Column="1" Style="{DynamicResource OverAllInfo.Search.TextBlock}"/>
                                    <TextBlock x:Name="OverallInitialPrice" Grid.Column="1" Grid.Row="1" Style="{DynamicResource OverAllInfo.Search.TextBlock}"/>
                                    <TextBlock x:Name="OverallAmount" Grid.Column="1" Grid.Row="2" Style="{DynamicResource OverAllInfo.Search.TextBlock}"/>
                                    <TextBlock x:Name="AvgCalculationProfit" Grid.Column="1" Grid.Row="3" Style="{DynamicResource OverAllInfo.Search.TextBlock}"/>
                                    <TextBlock x:Name="AvgPurchaseProfit" Grid.Column="1" Grid.Row="4" Style="{DynamicResource OverAllInfo.Search.TextBlock}"/>
                                </Grid>
                            </Border>
                        </Popup>
                        <Button x:Name="SupplyMonitoringButton" 
                            Width="65"
                            Content="&#xe7bf;" 
                            FontFamily="Segoe Fluent Icons"
                            Style="{DynamicResource StatisticsButton}" 
                            Cursor="Hand"
                            Click="SupplyMonitoringButton_Click" />
                    </DockPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
