                                        <Rectangle Fill="{DynamicResource TitleBar.Background}" Width="2"/>
                                        <TextBlock Style="{DynamicResource ComboBox.Entry}" Text="{Binding Path=TotalAmount, StringFormat={}{0:N0} р.}" HorizontalAlignment="Right"/>
