<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainTextBlock" TargetType="{x:Type TextBlock}" >
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextTrimming" Value="None"/>
    </Style>
    <Style x:Key="TableElements" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MainTextBlock}">
        <Setter Property="FontSize" Value="15"/>
    </Style>
    <Style x:Key="TextBlock.SupplyMonitoring.Header" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MainTextBlock}">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Padding" Value="3"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background" Value="{DynamicResource SupplyMonitoringBackgroundHeaderBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource SupplyMonitoringTextHeaderBrush}"/>
    </Style>
    <Style x:Key="OverAllInfoTextBlock" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MainTextBlock}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>
</ResourceDictionary>