<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="WindowBackgroundColor">#F0F0F0</Color>
    <Color x:Key="TitleBarBackgroundColor">#C6BDBF</Color>
    <Color x:Key="TitleBarButtonColor">#948F90</Color>
    <Color x:Key="WorkAreaBackgroundColor">#ffffff</Color>
    <Color x:Key="TextBackgroundColor">#D9D9D9</Color>
    <Color x:Key="HeaderTextBackgroundColor">#ABABAB</Color>
    <Color x:Key="SeparatorColor">#C6BDBF</Color>
    <Color x:Key="TextColor">#000000</Color>
    <Color x:Key="SecondaryTextColor">#A52A2A</Color>
    <Color x:Key="AccentColor">#A52A2A</Color>
    <Color x:Key="ButtonTextColor">#D6D6D6</Color>
    <Color x:Key="SearchNavigationButtonTextColor">#000000</Color>
    <Color x:Key="SearchNavigationButtonHoverColor">#D9D9D9</Color>
    <Color x:Key="SearchNavigationButtonPressedColor">#A9A9A9</Color>
    <Color x:Key="ProfileNavigationButtonTextColor">#000000</Color>
    <Color x:Key="ProfileNavigationButtonHoverColor">#D9D9D9</Color>
    <Color x:Key="ProfileNavigationButtonPressedColor">#A9A9A9</Color>
    <Color x:Key="GridLineChartColor">#CCCCCC</Color>



    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="{StaticResource TitleBarBackgroundColor}"/>
    <SolidColorBrush x:Key="TitleBarButtonBrush" Color="{StaticResource TitleBarButtonColor}"/>
    <SolidColorBrush x:Key="WorkAreaBackgroundBrush" Color="{StaticResource WorkAreaBackgroundColor}"/>
    <SolidColorBrush x:Key="TextBackgroundBrush" Color="{StaticResource TextBackgroundColor}"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource SeparatorColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="ButtonTextBrush" Color="{StaticResource ButtonTextColor}"/>
    <SolidColorBrush x:Key="SearchNavigationButtonTextBrush" Color="{StaticResource SearchNavigationButtonTextColor}"/>
    <SolidColorBrush x:Key="SearchNavigationButtonHoverBrush" Color="{StaticResource SearchNavigationButtonHoverColor}"/>
    <SolidColorBrush x:Key="SearchNavigationButtonPressedBrush" Color="{StaticResource SearchNavigationButtonPressedColor}"/>
    <SolidColorBrush x:Key="ProfileNavigationButtonTextBrush" Color="{StaticResource ProfileNavigationButtonTextColor}"/>
    <SolidColorBrush x:Key="ProfileNavigationButtonHoverBrush" Color="{StaticResource ProfileNavigationButtonHoverColor}"/>
    <SolidColorBrush x:Key="ProfileNavigationButtonPressedBrush" Color="{StaticResource ProfileNavigationButtonPressedColor}"/>
    <SolidColorBrush x:Key="GridLineChartBrush" Color="{StaticResource GridLineChartColor}"/>
    <LinearGradientBrush x:Key="MainGradientBackground">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="#7A1F2D" Offset="0.4"/>
            <GradientStop Color="#A52A2A" Offset="1"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
</ResourceDictionary>