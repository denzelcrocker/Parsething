<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ComponentCalculation.ToolTip" TargetType="ToolTip">
        <Setter Property="ToolTipService.InitialShowDelay" Value="0"/>
        <Setter Property="ToolTipService.ShowDuration" Value="60000"/>
        <Setter Property="ToolTipService.BetweenShowDelay" Value="200"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border Background="{DynamicResource MainTextBoxBackgroundBrush}"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="5">
                        <TextBlock Text="{TemplateBinding Content}"
                               Padding="5"
                               Foreground="{DynamicResource MainTextBoxTextBrush}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>